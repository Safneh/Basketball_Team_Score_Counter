<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    >
<LinearLayout
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".MainActivity">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            tools:context=".MainActivity">

                <TextView
                    android:fontFamily="sans-serif-medium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:gravity="center_horizontal"
                    android:text="Team A"
                    android:textSize="26sp" />

                <TextView
                    android:fontFamily="sans-serif-light"
                    android:id="@+id/scoreTeamA_text_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:gravity="center_horizontal"
                    android:text="0"
                    android:textSize="56sp" />

                <Button
                    android:fontFamily="sans-serif-medium"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="24dp"
                    android:layout_marginBottom="10dp"
                    android:onClick="addthreepointsA"
                    android:text="+3 points"
                    android:textAllCaps="true" />

                <Button
                    android:fontFamily="sans-serif-medium"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="24dp"
                    android:onClick="addTwopointsA"
                    android:text="+2 points"
                    android:layout_marginBottom="10dp"/>

                <Button
                    android:fontFamily="sans-serif-medium"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="24dp"
                    android:onClick="freethrowA"
                    android:text="Free throw" />

        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:context=".MainActivity">

                <TextView
                    android:fontFamily="sans-serif-medium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:gravity="center_horizontal"
                    android:text="Team B"
                    android:textSize="26sp" />

                <TextView
                    android:fontFamily="sans-serif-light"
                    android:id="@+id/scoreTeamB_text_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:gravity="center_horizontal"
                    android:text="0"
                    android:textSize="56sp" />

                <Button
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginLeft="24dp"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:onClick="addthreepointsB"
                    android:text="+3 points"
                    android:textAllCaps="true"
                    android:layout_marginBottom="10dp"/>

                <Button
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginLeft="24dp"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:onClick="addTwopointsB"
                    android:text="+2 points"
                    android:layout_marginBottom="10dp"/>

                <Button
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginLeft="24dp"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:onClick="freethrowB"
                    android:text="Free throw"
                    />
        </LinearLayout>
</LinearLayout>
        <Button
            android:fontFamily="sans-serif-medium"
            android:layout_width="120dp"
            android:layout_height="55dp"
            android:text="Reset"
            android:textAllCaps="true"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:onClick="ResetScore"
            android:layout_marginBottom="32dp"
            />
</RelativeLayout>
